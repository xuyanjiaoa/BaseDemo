<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <Button
           android:text="二维码扫描控件Demo"
           android:id="@+id/btn_scan_bar_view_demo"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="遮罩控件Demo"
           android:id="@+id/btn_camera_lens_view"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="扫描控件Demo"
           android:id="@+id/btn_scan_view"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />
       <Button
           android:text="拍照组件Demo"
           android:id="@+id/btn_camera_view"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />


       <Button
           android:text="屏幕适配示例"
           android:id="@+id/screen_auto_size"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="语音播放示例"
           android:id="@+id/btn_sound_play"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="双屏使用示例"
           android:id="@+id/btn_multi_display"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="Camera2使用示例"
           android:id="@+id/btn_Camera2_demo"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="Tcp使用示例"
           android:id="@+id/btn_Tcp_demo"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />






   </LinearLayout>

</androidx.core.widget.NestedScrollView>