<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <Button
           android:text="二维码扫描控件Demo"
           android:id="@+id/btn_scan_bar_view_demo"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="遮罩控件Demo"
           android:id="@+id/btn_camera_lens_view"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />

       <Button
           android:text="扫描控件Demo"
           android:id="@+id/btn_scan_view"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />
       <Button
           android:text="拍照组件Demo"
           android:id="@+id/btn_camera_view"
           android:layout_width="match_parent"
           android:layout_margin="5dp"
           android:layout_height="wrap_content" />





   </LinearLayout>

</androidx.core.widget.NestedScrollView>